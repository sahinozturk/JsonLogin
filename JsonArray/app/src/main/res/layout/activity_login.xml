<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"


    android:layout_height="match_parent"

    tools:context="com.example.sahin.jsonarraykullanicikayitekleme.Login">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="lOGİN"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtloginmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editText"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:hint="Mail Adresiniz"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txtloginsifre"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/txtloginmail"

            android:layout_alignStart="@+id/txtloginmail"
            android:layout_below="@+id/txtloginmail"
            android:layout_marginTop="32dp"
            android:hint="Şifreniz" />


        <Button
            android:onClick="opGiris"
            android:id="@+id/btnGiris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkBox"
            android:layout_alignLeft="@+id/checkBox"
            android:layout_alignRight="@+id/checkBox"
            android:layout_alignStart="@+id/checkBox"
            android:layout_below="@+id/checkBox"
            android:layout_marginTop="32dp"
            android:text="GİRİS" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtloginsifre"
            android:layout_alignLeft="@+id/txtloginsifre"
            android:layout_alignRight="@+id/txtloginsifre"
            android:layout_alignStart="@+id/txtloginsifre"
            android:layout_below="@+id/txtloginsifre"
            android:layout_marginTop="37dp"
            android:text="Beni Hatırla" />


        <Button
          android:onClick="opYenikayit"
            android:id="@+id/btnyenikayit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yeni Kayıt"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/btnGiris"
            android:layout_alignRight="@+id/btnGiris"
            android:layout_alignEnd="@+id/btnGiris"
            android:layout_alignLeft="@+id/btnGiris"
            android:layout_alignStart="@+id/btnGiris" />
    </RelativeLayout>


</LinearLayout>
